{
    "QueryConfiguration": {
        "Query": "app_name:hotel_engine AND category:book_status AND status:failure",
        "Index": "logs-*",
        "WindowInSeconds": 300,
        "Aggregate": {
            "Type": "count",
            "Field": "*",
            "Percents": []
        }
    },
    "Description": "booking alarm failure",
    "FriendlyName": "booking Alarm",
    "Threshold": {
        "Value": 1,
        "Condition": "gte"
    },
    "ApplicationName": "promethus-poc",
    "Notifications": {
        "OnError": [
            {
                "Template": "business_fault_failure",
                "Type": "teams_message"
            }
        ],
        "OnRecovery": [
            {
                "Template": "business_fault_recovery",
                "Type": "teams_message"
            }
        ]
    }
}