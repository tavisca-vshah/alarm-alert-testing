{
    "description": "Prometheus Poc alarm",
    "friendlyName": "Prometheus POC alarm",
    "threshold": {
        "condition": "eqd",
        "value": 1
    },
    "applicationName": "promethus-poc",
    "environment": "non-prod",
    "queryConfiguration": {
        "query": "app_name:promethus_poc AND type:exception",
        "index": "logs-*",
        "windowInSeconds": 300,
        "aggregate": {
            "type": "count",
            "field": "*"
        }
    },
    "notifications": {
        "onError": [
            {
                "type": "teams_message",
                "template": "business_fault_failur"
            }
        ],
        "onRecovery": [
            {
                "type": "teams_message",
                "template": "business_fault_recover"
            }
        ]
    }
}